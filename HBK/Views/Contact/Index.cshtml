
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/product-card-style.css")">
    <style>
        .middle_content input {
            width: 100% !important;
        }

        .middle_content{
            margin-bottom: 25px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="topadd_bar"><a href="#"><img src="~/Content/images/addbanner_728x90_V1.jpg" alt="quảng cáo"></a></div>
        </div>
    </div>
    <div class="row">
        <div class="">
            <div class="col-lg-8 col-md-8">
                <div class="middle_content">
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li role="button" class="active">Liên hệ</li>
                        <li class="active">Gửi email cho chúng tôi</li>
                    </ol>
                    <div class="contact_area wow fadeInLeftBig" style="margin-bottom:0px !important;">
                        <form action="#" class="contact_form">
                            <div class="col-md-8 col-md-offset-2">
                                <input class="form-control" type="text" placeholder="Họ và tên">
                                <input class="form-control" type="mail" placeholder="Email">
                                <input class="form-control" type="text" placeholder="Tiêu đề">
                                <textarea class="form-control" rows="10" placeholder="Nội dung"></textarea>
                                <div class="form-group text-center">
                                    <button class="btn btn--block" style="display:initial;width:inherit;" type="submit">Hoàn thành</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="middle_content" style="padding-right:0px !important;">
                    <h2>Thông tin liên hệ</h2>
                    <div class="contact_address wow fadeInRightBig">
                        <h4>Địa chỉ</h4>
                        <p>65/60 Huỳnh Văn Bánh, Phường 17, Quận Phú Nhuận, TP.HCM.</p>
                        <h4>Liên hệ</h4>
                        <address>
                            <p>Hotline: 0979 472 043</p>
                            <p>Email: sales01.tanlong@gmail.com</p>
                        </address>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

