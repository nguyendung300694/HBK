    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/BEN.js"></script>

    <style>
        .foo-info:hover a {
            color: #12a3df !important;
        }

        .navbar-brand:hover {
            color: #fff !important;
            font-size: 18px;
        }

        .navbar-brand {
            margin-top: 14px;
            margin-bottom: -20px;
            padding: 0px 30px 0px 30px !important;
            font-size: 16px;
        }

        .custom_nav .active a:not(.dropdown-item) {
            padding-bottom:13px !important;
        }
    </style>
