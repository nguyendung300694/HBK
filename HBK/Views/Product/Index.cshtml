
@{
    ViewBag.Title = ViewBag.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/product-card-style.css")">
    <style>

    </style>
}

<div class="container">
    <div class="">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="topadd_bar"><a href="#"><img src="~/Content/images/addbanner_728x90_V1.jpg" alt="quảng cáo"></a></div>
            </div>
        </div>
        <div class="middle_content">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li><a role="button">Sản phẩm</a></li>
                <li class="active">@ViewBag.CategoryName</li>
            </ol>
            <div class="single_page_area">
                <ul class="cards" style="display: flex;justify-content: center;align-items:center;">
                    @foreach (var item in ViewBag.ListProduct)
                    {
                        <li class="cards__item">
                            <div class="card">
                                <div class="text-center" style="width:auto;height:200px;display: flex;justify-content: center;align-items: center;">
                                    <img style="width:-webkit-fill-available;height:-webkit-fill-available;" src="@Url.Content(item.ProductExtend.FilePath)" />
                                </div>
                                <div class="card__content">
                                    <div class="card__title text-center" style="white-space: nowrap; overflow: hidden;text-overflow: ellipsis;padding:5px 0px 13px 0px; font-weight:bold; ">@item.ProductName</div>
                                    <p style="font-size:11px !important;display:flex;justify-content:space-around;" class="card__text"><span class="timestamp"><i class="fa fa-clock-o" aria-hidden="true"></i> @item.CreatedDate.ToString("HH:mm:ss")</span><span class="comments">  <i class="fa fa-calendar" aria-hidden="true"></i> @item.CreatedDate.ToString("dd/MM/yyyy")</span><span class="comments">  <i class="fa fa-eye" aria-hidden="true"></i> @item.View</span></p>
                                    <button role="button" class="btn btn--block card__btn">Xem thêm</button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>